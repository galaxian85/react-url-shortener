{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "jsx": "react",

    // type checking
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noImplicitReturns": true
  }
}